# ====================================
# REMATCH DISCORD BOT - ENVIRONMENT
# ====================================
# Copy this file to .env and fill in your values

# ==== CORE (Required) ====
DISCORD_TOKEN=your_discord_bot_token_here
CLIENT_ID=your_bot_application_id_here
GUILD_ID=your_discord_server_id_here
WEBHOOK_SECRET=generate_a_secure_32_char_secret_here

# ==== VOICE CHANNELS (Match System) ====
VOICE_CATEGORY_ID=category_id_for_match_voice_channels

# ==== TICKET SYSTEM (Report Integration) ====
# Category where ticket text channels will be created
DISCORD_TICKETS_CATEGORY_ID=category_id_for_tickets

# Staff role that can see tickets
DISCORD_STAFF_ROLE_ID=staff_role_id_here

# ==== AUDIT LOGS ====
# Channel where audit logs will be posted
DISCORD_LOGS_CHANNEL_ID=logs_channel_id_here

# Channel for security alerts (failed auth attempts)
DISCORD_SECURITY_LOGS_CHANNEL_ID=security_logs_channel_id_here

# ==== SITE API ====
# Base URL of inhouse site
SITE_API_URL=https://inhouse.blaidds.com

# Token for API authentication (can be same as WEBHOOK_SECRET)
SITE_API_TOKEN=same_as_webhook_secret_or_different

# ==== SYNC MODE ====
# 'webhook' = PHP sends reports to bot (faster, requires PHP changes)
# 'polling' = Bot polls site for new reports (fallback)
REPORT_SYNC_MODE=webhook

# Polling interval in milliseconds (default 30 seconds)
AUDIT_POLL_INTERVAL_MS=30000

# ==== DATABASE (For /perfil command) ====
DB_HOST=localhost
DB_USER=root
DB_PASSWORD=your_database_password
DB_NAME=inhouse

# ==== OPTIONAL ====
WEBHOOK_PORT=3001
CHANNEL_LIFETIME_MINUTES=120
AUTO_DELETE_ON_EMPTY=false
LOG_LEVEL=info
BOT_PREFIX=/
